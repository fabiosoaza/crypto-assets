<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/containerAtivoItem"
    >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <ImageView
                    android:id="@+id/iconeAtivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_currency_not_found" />


                <TextView
                    android:id="@+id/txtNomeAtivo"
                    style="@style/txtAtivoTickerAtivo"
                    android:layout_marginStart="8dp"
                    android:focusable="false"
                    android:importantForAccessibility="no"
                    android:text="Nome Ativo"
                    app:layout_constraintStart_toEndOf="@+id/iconeAtivo"
                    app:layout_constraintTop_toTopOf="@+id/iconeAtivo" />


                <View
                    style="@style/horizontalDivider"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/txtNomeAtivo"
                    app:layout_constraintTop_toBottomOf="@+id/imageButtonExcluir" />

                <ImageButton
                    android:id="@+id/imageButtonExcluir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/txtNomeAtivo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtNomeAtivo"
                    app:srcCompat="@drawable/ic_baseline_delete_forever_48" />


            </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>