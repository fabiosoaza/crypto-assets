<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>


        <!-- <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>


    </style>

    <style name="progressBarCustomStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="styleTituloSecao" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="txtTitulo" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="txtHeaderValue" parent="txtTitulo">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>    </style>

    <style name="txtHeaderLabel" parent="txtTitulo">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>


    <style name="txtItemValue" parent="txtTitulo">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="txtItemLabel" parent="txtTitulo">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="txtDefault" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="styleContainedButton" parent="@style/Widget.MaterialComponents.Button">
        <!--
        <item name="android:textSize">@dimen/text_view_size_normal</item>
        <item name="android:width">@dimen/text_view_width_normal</item>
        -->
    </style>

    <style name="horizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="verticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

</resources>
