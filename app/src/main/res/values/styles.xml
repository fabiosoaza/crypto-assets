<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>


        <!-- <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>


    </style>

    <style name="progressBarCustomStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="styleTituloSecao" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>


    <style name="containerTotalItemHeaderMoeda">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="cardTotalItemHeaderMoeda" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="txtLabelTotalBalance" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="txtDefault" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="txtValorLabelTotalBalance" parent="@style/txtDefault">
   </style>

    <style name="txtVariacaoTotalPrecoMedio" parent="@style/txtDefault">
    </style>

    <style name="txtVariacaoPorcentagemPrecoMedio" parent="@style/txtDefault">
    </style>

    <style name="txtLabelVariacaoPatrimonio" parent="@style/txtLabelTotalBalance">
    </style>

    <style name="txtLabelTotalInvestido" parent="@style/txtLabelTotalBalance">
    </style>

    <style name="txtTotalInvestido" parent="@style/txtDefault">
    </style>

    <style name="txtValorVariacaoPatrimonio" parent="@style/txtDefault">
    </style>

    <style name="txtValorTotalInvestido" parent="@style/txtDefault">
    </style>

    <style name="txtLabelVariacaoPrecoMedioNeutra" parent="@style/txtDefault">
    </style>

    <style name="txtLabelVariacaoPrecoPositiva" parent="@style/txtDefault">
        <item name="android:textColor">@color/colorVariationPositive</item>
    </style>

    <style name="txtLabelVariacaoPrecoNegativa" parent="@style/txtDefault">
        <item name="android:textColor">@color/colorVariationNegative</item>
    </style>



    <style name="styleContainedButton" parent="@style/Widget.MaterialComponents.Button">
        <!--
        <item name="android:textSize">@dimen/text_view_size_normal</item>
        <item name="android:width">@dimen/text_view_width_normal</item>
        -->
    </style>

</resources>
